{
  "compilerOptions": {
    // Standard Next.js Settings:
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // ⚠️ THE CRITICAL FIX FOR 'process' ERROR ⚠️
    // This tells TypeScript exactly where to look for installed type definitions (like @types/node).
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    // CRITICAL CHANGES FOR DRIZZLE/NODE RESOLUTION:
    // This fixes the 'Cannot find module 'drizzle-kit'' error.
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // Explicitly include the Drizzle config file
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "plugins": [
    {
      "name": "next"
    }
  ]
}
